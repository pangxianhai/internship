<?xml version="1.0" encoding="utf-8"?>
<cn.edu.swufe.lawschool.internship.android.activity.lib.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFF">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/leave_list_begin_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="#000"/>
                <TextView
                        android:id="@+id/leave_list_end_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="#000"/>
                <TextView
                        android:id="@+id/leave_list_leave_status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/leave_list_student_name_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#888"/>
                <TextView
                        android:id="@+id/leave_list_leave_type_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#888"/>
                <TextView
                        android:id="@+id/leave_list_leave_reason_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="#888"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/leave_list_arrow_rightward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text=">"
                android:textSize="18dp"
                android:textColor="#888"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="30dp"
                android:background="#FFF"
                android:gravity="bottom"/>
    </FrameLayout>
</cn.edu.swufe.lawschool.internship.android.activity.lib.SwipeLayout>