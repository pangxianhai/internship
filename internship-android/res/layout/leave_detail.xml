<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF">
    <include layout="@layout/header"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="20dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="请假类型："
                      android:textColor="#000"
                      android:layout_weight="1"
                      android:height="30dp"
                      android:gravity="right|center_vertical"
                      android:paddingRight="5dp"/>
            <TextView android:id="@+id/leave_detail_leave_type_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:height="30dp"
                      android:textColor="#000"
                      android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:height="30dp"
                      android:gravity="right|center_vertical"
                      android:paddingRight="5dp"
                      android:text="请假时间："
                      android:textColor="#000"
                      android:layout_weight="1"/>
            <TextView android:id="@+id/leave_detail_leave_time_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:height="30dp"
                      android:textColor="#000"
                      android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:height="30dp"
                      android:gravity="right|center_vertical"
                      android:paddingRight="5dp"
                      android:text="请假原因："
                      android:textColor="#000"
                      android:layout_weight="1"/>
            <TextView android:id="@+id/leave_detail_leave_reason_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:height="30dp"
                      android:textColor="#000"
                      android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:height="30dp"
                      android:gravity="right|center_vertical"
                      android:paddingRight="5dp"
                      android:text="状态："
                      android:textColor="#000"
                      android:layout_weight="1"/>
            <TextView android:id="@+id/leave_detail_leave_status_text"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:height="30dp"
                      android:textColor="#000"
                      android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/leave_detail_flow_panel"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    </LinearLayout>
</LinearLayout>